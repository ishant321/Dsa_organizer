<%- include("partials/header.ejs") %> 

<div class="main">
    <div class="question-list-title">
        <div style="margin-top: 1rem; width: 70%;">
            <h2 style="margin: auto; display: flex; justify-content: center; font-size: 4rem; text-decoration: underline;">Notes</h2>
            <ul style="list-style: none; color: black;">
                <% var k = 0; notes.forEach((item) => { %>
                    <form action="/removenote" method="post"><li style="margin-bottom: 10px; color: rgb(255, 255, 255); font-weight: 400; font-size: 1.8rem;">(<%= k+1 %>)&nbsp;<%= item %>&nbsp;<button type="submit" style="width: 3rem; border-radius: 50px; background-color: rgb(135, 0, 0); border: none;">-</button></li>
                    <input type="hidden" value="<%= questionid %>" name="questionid">
                    <input type="hidden" value="<%= k %>" name="no">
                    </form>
                <%k++;%>
                <% }) %>
            </ul>
            <form action="/addnote" method="post" style="display: flex; flex-direction: column; width: 90%; margin: 7rem auto auto auto;">
                <input type="hidden" value="<%= questionid %>" name="questionid">
                <textarea type="textarea" name="newnote" style=" border-radius: 10px; border: 2px solid white; height: 8rem; padding: 2px; color: black;" placeholder="Add new notes" required></textarea>
                <button type="submit" style="width: 20%; margin: 2rem auto auto auto; height: 4rem; background-color: rgb(0, 208, 255); border-radius: 10px; border: none; font-size: 1.7rem;">Add</button>
                <%k++;%>
            </form>
        </div>
    </div>    
</div>


<%- include("partials/footer.ejs") %>